{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C/C++: g++ build active file",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g", // Include debug symbols
        "-Wall", // Enable warnings
        "${file}", // Compile the current file
        "-o", // Output flag
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Compiler: g++ (build with debug symbols)"
    }
  ]
}